{
  "name": "blender-addon",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/blender-addon/src",
  "tags": [],
  "targets": {
    "prepare-blender-dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/blender-addon",
        "envFile": "apps/blender-addon/.env",
        "commands": [
          "echo Installing Blender Addon Dependencies...",
          "\"{args.blenderPythonPath}\" -m pip install -r {args.cwd}/requirements-dev.txt"
        ]
      },
      "configurations": {
        "unix": {
          "args": "--blenderPythonPath=$(BLENDER_PYTHON_PATH) --cwd=$(pwd)"
        },
        "windows-powershell": {
          "args": "--blenderPythonPath=%BLENDER_PYTHON_PATH% --cwd=%cd%"
        }
      }
    }
  }
}
