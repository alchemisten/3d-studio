{
  "name": "3d-studio-viewer-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/viewer-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/viewer-core",
        "main": "libs/viewer-core/src/main.ts",
        "tsConfig": "libs/viewer-core/tsconfig.lib.json",
        "assets": ["libs/viewer-core/*.md"],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "publish": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "ts-node tools/scripts/publish.ts 3d-studio-viewer-core {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/viewer-core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/viewer-core"],
      "options": {
        "jestConfig": "libs/viewer-core/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
