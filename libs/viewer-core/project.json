{
  "name": "3d-studio-viewer-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/viewer-core/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "outputs": ["{workspaceRoot}/dist/libs/viewer-core"],
      "defaultConfiguration": "production",
      "options": {
        "outDir": "../../dist/libs/viewer-core"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node tools/scripts/publish.ts 3d-studio-viewer-core {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js",
        {
          "externalDependencies": ["jest"]
        }
      ],
      "outputs": ["{workspaceRoot}/coverage/libs/viewer-core", "{workspaceRoot}\\coverage\\libs\\viewer-core"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverage": true
        }
      }
    }
  }
}
